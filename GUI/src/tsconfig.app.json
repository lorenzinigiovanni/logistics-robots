{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2020",
    "baseUrl": "./",
    "types": []
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "main.ts",
    "polyfill.ts",
    "../node_modules/@nebular/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "../node_modules/@nebular/**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true
  }
}
